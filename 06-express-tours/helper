#init project
npm init

#install nodemon
npm install nodemon --save-dev

#install express version 4
npm install express@4

#install POSTMAN:
// https://www.postman.com


#install morgan - http logger middleware
npm install morgan


#install dotenv - read environment variables via a .env file
npm install dotenv


#install tedious - tedious is the implementation of the TDS protocol which the driver uses to communicate to SQL Server
npm install tedious
#install mssql as wrapper of tedious
#mssql has built-in SQL injection protection. Always use parameters or tagged template literals to pass sanitized values to your queries.
npm install mssql